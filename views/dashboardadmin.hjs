<style>
    @import url('https://fonts.googleapis.com/css2?family=Bellota:wght@300;400;700&family=Roboto:wght@100;300;400;500;700;900&family=Sora:wght@100;200;300;400;500;600;700;800&display=swap');

    :root {
        --primary: #FE633D;
        --primaryDarker: #c14b2e;
        --secondary: #227bcf;
        --dark: #202046;
        --bright: #FFFFFF;
        --body: #d5d5d5;
        --box-shadow: 0 8px 22px rgba(0, 0, 0, 0.1)
    }

    body {

        font-family: 'Sora', sans-serif;
        line-height: 1.7;
        color: var(--body);
    }

    h1,
    h2,
    h3,
    h4,
    h4,
    h6,
    .display-4 {
        font-family: 'Sora', sans-serif;
        font-weight: 700;
        color: var(--bright);
    }


    a {
        color: var(--bright);
        text-decoration: none;
    }



    #yourOptions {
        color: var(--dark);
        font-weight: 700;
    }

    #plansPara {
        color: rgb(134, 134, 134);
    }

    .learnMore {
        color: var(--secondary);
    }

    .navbar {
        font-size: 20px;
        color: white;
        box-shadow: var(--box-shadow);
    }

    .navbar-brand img {
        width: 70px;
        /* Adjust the width as per your requirement */
        height: auto;
        /* Maintain aspect ratio */
    }

    .hero {
        background-image: url(https://i.ibb.co/b7nN1hb/Control-room.jpg);
        background-position: center;
        background-size: cover;
        background-attachment: fixed;
        position: relative;
        z-index: 2;
    }

    .hero::after {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(13, 13, 29, 0.8);
        z-index: -1;
    }

    .btn-primary {
        background-color: transparent;
        border-color: var(--dark);
        border-width: 1px;
        color: var(--secondary);
        transition: 0.5s ease-in-out;
    }

    .btn-primary:hover {
        background-color: var(--secondary);
        border-color: var(--dark);
        transition: 0.5s ease-in-out;
    }

    .btn-secondary {
        background-color: var(--primary);
        border-width: 0px;
        transition: 0.5s ease-in-out;

    }

    .btn-secondary:hover {
        background-color: var(--primary);
        border-width: 0px;
        transition: 0.5s ease-in-out;
        background-color: var(--primaryDarker);
    }

    .btn {
        padding: 14px 18px;
    }

    section {
        padding-top: 120px;
        padding-bottom: 120px;
    }

    .card-effect {
        box-shadow: var(--box-shadow);
        background-color: white;
        padding: 25px;
        transition: all 0.35s ease;
    }

    .card-effect:hover {
        box-shadow: none;
        transform: translateY(5px);
    }

    .iconBox {
        width: 54px;
        height: 54px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--secondary);
        color: white;
        font-size: 32px;
        border-radius: 130px;
        text-align: center;
        margin: auto;

    }


    .service {
        position: relative;
        z-index: 2;
        overflow: hidden;
    }

    .service::after {
        content: '';
        width: 100%;
        height: 100%;
        position: absolute;
        top: -100%;
        left: 0;
        background-color: var(--primary);
        z-index: -1;
        opacity: 0;
        transition: all 0.4s ease;
    }

    .service:h5,
    p {
        color: white;
    }



    .service:hover h5,
    .service:hover p,
    .service:hover a {
        color: white;
        transition: ease-in-out;
    }

    .service:hover::after {
        opacity: 1;
        top: 0;

    }

    .service:hover {
        background-color: var(--primary);
    }

    .service:hover .iconBox {
        background-color: white;
        color: var(--primary);
        transition: ease-in-out;
    }

    .service:hover p,
    .service:hover a {
        color: white;

    }

    .service:hover::after {
        opacity: 1;
        top: 0;
    }

